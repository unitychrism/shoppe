- @page_title = t('shoppe.vendors.vendors') + " - #{@vendor.name}"
= content_for :header do
  %p.buttons
    = link_to t('shoppe.vendors.edit'), [:edit, @vendor], class: "button"
  %h2.users= t('shoppe.vendors.vendors') + "- #{@vendor.name}"

#vendor
  .details
    .left
      %dl
        %dt= t('shoppe.vendors.name')
        %dd= @vendor.full_name
        %dt= t('shoppe.vendors.company')
        %dd= @vendor.company.blank? ? '-' : @vendor.company
    .right
      %dl
        %dt= t('shoppe.vendors.email')
        %dd= mail_to @vendor.email
        %dt= t('shoppe.vendors.phone')
        %dd= @vendor.phone
        %dt= t('shoppe.vendors.mobile_phone')
        %dd= @vendor.mobile